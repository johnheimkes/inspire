<%= form_for @post, :url => posts_path, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
  <fieldset>
    <%= f.text_field :image_url, :value => "Paste image URL or upload an image" %><br/>

    
    <%= f.text_field :title, :value => "Title:" %>


    <%= f.text_area :body, :value => "Description:" %>

    <%= f.submit :value => "SUBMIT"%>
  </fieldset>
<% end %>