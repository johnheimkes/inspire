<% title "Inspiration posted by #{@user.name}" %>

<div class="user_card">
  <%= image_tag @user.avatar, :alt => "Avatar for #{@user.name}" %>
  <div class="user_info">
    <h3><%= @user.name %></h3>
    <h5><%= @user.posts.count %> inspirations</h5>
  </div>
</div>

<% for post in @posts %>
  <%= render :partial => "posts/post", :locals => { :post => post } %>
<% end %>
